---
import { Icon } from "astro-icon";

import Layout from "../components/Layout.astro";

const cart = Array(0).fill(0);
---

<Layout>
	<div class="container">
		<h1 class="text-5xl font-bold">Cart</h1>
		{
			cart.length === 0 && (
				<div class="flex flex-col justify-center items-center">
					<Icon class="w-32 h-32" pack="mdi" name="cart" />
					<h1 class="text-3xl font-bold text-center">
						Oops, your cart is empty! Go to
						<a class="text-primary underline" href="/">
							shop
						</a>
					</h1>
				</div>
			)
		}
		{cart.length !== 0 && <table class="table table-zebra w-full mt-6">asdf</table>}
	</div>
</Layout>
